{
  "name": "matchPoint",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently --kill-others \"npm run watch-client\" \"npm run start-dev\"",
    "clean": "rm -rf build utils && mkdir build utils utils/uploads",
    "build-css": "node-sass ./assets/sass/application.scss | cleancss -o ./public/styles/application.css",
    "build-server": "babel -d ./build ./app && babel -d ./utils ./helpers && cp ./helpers/schedule.txt ./utils/schedule.txt",
    "webpack": "node ./node_modules/webpack/bin/webpack.js",
    "build": "better-npm-run build",
    "prestart": "npm run build",
    "pre-test-node": "babel-node ./app/test/dbSetup.js",
    "post-test-node": "node ./app/test/dbCleanup.js",
    "start": "better-npm-run start-prod",
    "start-dev": "better-npm-run start-dev",
    "watch-client": "rm ./public/js/* && webpack -w",
    "test-node": "mocha -R spec --compilers js:babel-core/register app/test/api",
    "test": "karma start"
  },
  "betterScripts": {
    "start-dev": {
      "command": "nodemon ./app/app.js --exec babel-node",
      "env": {
        "NODE_ENV": "development",
        "PORT": 3000
      }
    },
    "start-prod": {
      "command": "sudo node ./build/app.js",
      "env": {
        "NODE_ENV": "production",
        "PORT": 80
      }
    },
    "build": {
      "command": "npm run clean && npm run build-server && npm run build-css && npm run webpack"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
